# ChatEcho 环境配置示例文件
# 复制此文件为 .env 并填入真实的API密钥

# TTS API配置
TTS_API_URL=https://api.siliconflow.cn/v1/audio/speech
# 只需要填入 sk- 开头的密钥，Bearer 前缀会自动添加
TTS_API_KEY=sk-your-tts-api-key-here
TTS_DEFAULT_MODEL=FunAudioLLM/CosyVoice2-0.5B
TTS_DEFAULT_VOICE=FunAudioLLM/CosyVoice2-0.5B:anna

# ASR API配置
ASR_API_URL=https://api.siliconflow.cn/v1/audio/transcriptions
# 只需要填入 sk- 开头的密钥，Bearer 前缀会自动添加
ASR_API_KEY=sk-your-asr-api-key-here
ASR_DEFAULT_MODEL=FunAudioLLM/SenseVoiceSmall

# 音频配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# 调试模式
DEBUG=false
LOG_LEVEL=INFO